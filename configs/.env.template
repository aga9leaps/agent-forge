# Agent Forge Configuration Template
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Email Configuration for Reporting Agent
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_db_password
SQL_DB_NAME=agent_forge

# MongoDB Configuration
MONGO_USERNAME=your_mongo_username
MONGO_PASSWORD=your_mongo_password
MONGO_CLUSTER_URL=your_cluster.mongodb.net
MONGODB_NAME=agent_forge
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/agent_forge?retryWrites=true&w=majority

# Zilliz/Milvus Configuration
ZILLIZ_URI=https://your_zilliz_instance.cloud.zilliz.com
ZILLIZ_TOKEN=your_zilliz_token_here

# WhatsApp Configuration
MY_WHATSAPP_TOKEN=verification-token-meta
WHATSAPP_TOKEN=your_whatsapp_token_here
WHATSAPP_ACCOUNT_ID=your_account_id
WHATSAPP_API_VERSION=v22.0

# Email Configuration (Alternative)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here

# Environment
NODE_ENV=development
ENCRYPTION_KEY=your-secure-encryption-key-here
FILE_RETENTION_HOURS=48
ENABLE_FILE_ENCRYPTION=true
ENABLE_FILE_CLEANUP=true

# AWS Configuration
IS_LAMBDA=false
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
S3_BUCKET_NAME=your_s3_bucket_name
TALLY_AWS_BUCKET_NAME=your_tally_bucket_name

# MongoDB Collection Names
CONSUMER_COLLECTION=af_consumers
CUSTOMER_COLLECTION=af_customers
TASKS_COLLECTION=af_tasks
MP_TASKS_COLLECTION=af_tasks
MP_CUSTOMERS_COLLECTION=af_customers
PROMPTS_COLLECTION=prompts

# Google Sheet Configuration
GOOGLE_SHEET_ID=your_google_sheet_id

# Milvus Collection Names
MILVUS_COLLECTION_NAME=agent_forge_collection

# Tally Configuration
TALLY_URL=http://localhost:9003

# Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION_TIME=24h

# Backend Configuration
BACKEND_BASE_URL=http://localhost:3000
FINANCE_CHAT_COLLECTION=finance_chats

# Google Cloud Storage
GCP_BUCKET_NAME=your_gcp_bucket

# Google Sheets Service Account (JSON format - escape quotes)
SHEET_TYPE=service_account
SHEET_PROJECT_ID=your_project_id
SHEET_PRIVATE_KEY_ID=your_key_id
SHEET_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----"
SHEET_CLIENT_EMAIL=your_service_account@your_project.iam.gserviceaccount.com
SHEET_CLIENT_ID=your_client_id
SHEET_AUTH_URI=https://accounts.google.com/o/oauth2/auth
SHEET_TOKEN_URI=https://oauth2.googleapis.com/token
SHEET_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
SHEET_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/your_service_account
SHEET_UNIVERSE_DOMAIN=googleapis.com

# Google Cloud Storage Service Account
GCS_TYPE=service_account
GCS_PROJECT_ID=your_gcs_project_id
GCS_PRIVATE_KEY_ID=your_gcs_key_id
GCS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_gcs_private_key_here\n-----END PRIVATE KEY-----"
GCS_CLIENT_EMAIL=your_gcs_service_account@your_project.iam.gserviceaccount.com
GCS_CLIENT_ID=your_gcs_client_id
GCS_AUTH_URI=https://accounts.google.com/o/oauth2/auth
GCS_TOKEN_URI=https://oauth2.googleapis.com/token
GCS_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
GCS_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/your_gcs_service_account
GCS_UNIVERSE_DOMAIN=googleapis.com